{
  "extends": "eslint-config-standard-universal/tsconfig.json",
  "compilerOptions": {
    "rewriteRelativeImportExtensions": false,
    "verbatimModuleSyntax": false,
    "outDir": null,
    "noEmit": true,
    "noImplicitAny": false,
    "types": [
      "./src/types"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "build",
    "scripts",
    "test",
    "tests",
    "**/*.spec.ts",
    "android"
  ],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}